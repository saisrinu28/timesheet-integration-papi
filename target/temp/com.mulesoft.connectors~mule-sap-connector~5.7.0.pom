<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>SAP Connector - Mule 4</name>
    <groupId>com.mulesoft.connectors</groupId>
    <artifactId>mule-sap-connector</artifactId>
    <version>5.7.0</version>
    <packaging>mule-extension</packaging>
    <parent>
        <groupId>com.mulesoft.connectors</groupId>
        <artifactId>mule-connectivity-parent</artifactId>
        <version>3.3.0-RUNTIME.4.1.x</version>
    </parent>

    <properties>
        <licensePath>LICENSE.md</licensePath>
        <!-- Remove when a new parent version with MTF is available -->
        <munit.input.directory>src/test/munit</munit.input.directory>
        <munit.output.directory>${basedir}/target/test-mule/munit</munit.output.directory>
        <munit.extensions.maven.plugin.version>1.0.0</munit.extensions.maven.plugin.version>
        <munit.version>2.2.4</munit.version>
        <mavenResourcesVersion>3.0.2</mavenResourcesVersion>
        <mtf.tools.version>1.1.1</mtf.tools.version>
        <!-- runtime version to run -->
        <runtimeVersion>4.2.0</runtimeVersion>
        <runtimeProduct>MULE_EE</runtimeProduct>
        <sonar.coverage.exclusions>**com/mulesoft/connector/sap/internal/model/AsynchronousResult.java,**com/mulesoft/connector/sap/internal/config/i18n/Mule4SapMessage.java,**com/mulesoft/connector/sap/api/SapAttributes.java,**com/mulesoft/connector/sap/internal/connection/provider/CertificateConnectionProvider.java,**com/mulesoft/connector/sap/internal/error/exception/InvalidConfigurationException.java,**com/mulesoft/connector/sap/internal/error/exception/InvalidCredentialsException.java,**com/mulesoft/connector/sap/internal/error/exception/InvalidDestinationException.java,**com/mulesoft/connector/sap/internal/error/exception/InvalidHostException.java,**com/mulesoft/connector/sap/api/MessageServer.java,**com/mulesoft/connector/sap/internal/model/function/AbapInternalException.java,**com/mulesoft/connector/sap/internal/error/exception/ValidationException.java,**com/mulesoft/connector/sap/internal/error/exception/UnknownInvalidDestinationException.java,**com/mulesoft/connector/sap/internal/error/exception/SearchExecutionException.java,**com/mulesoft/connector/sap/internal/error/exception/SapServerInitializationException.java,**com/mulesoft/connector/sap/internal/error/exception/SapServerException.java,**com/mulesoft/connector/sap/internal/connection/provider/delegate/JCoReflectiveConnectionProviderDelegate.java, **com/mulesoft/connector/sap/internal/error/exception/BapiFunctionInputStreamTransformationException.java,**com/mulesoft/connector/sap/internal/error/exception/BapiFunctionSerializationException.java,**com/mulesoft/connector/sap/internal/error/exception/BapiServerInitializationException.java,**com/mulesoft/connector/sap/internal/error/exception/IdocInputStreamTransformationException.java,**com/mulesoft/connector/sap/internal/error/exception/IdocServerInitializationException.java,**com/mulesoft/connector/sap/internal/error/exception/SapXmlParserException.java, **com/mulesoft/connector/sap/internal/common/Const.java, **com/mulesoft/connector/sap/internal/source/DocumentSource.java,**com/mulesoft/connector/sap/internal/source/FunctionSource.java, **com/mulesoft/connector/sap/internal/service/builder/IDocDocumentListBuilder.java, **com/mulesoft/connector/sap/internal/service/parser/JCoToBusinessObjectParser.java, **com/mulesoft/connector/sap/internal/source/server/SapJCoServer.java, **com/mulesoft/connector/sap/internal/connection/JCoConnection.java, **com/mulesoft/connector/sap/internal/service/dao/IDocDocumentDAO.java, **com/mulesoft/connector/sap/internal/service/impl/AbstractBusinessObjectJCoService.java, **com/mulesoft/connector/sap/internal/error/exception/AbapException.java, **com/mulesoft/connector/sap/internal/service/impl/AbstractSapJCoService.java, **com/mulesoft/connector/sap/internal/error/exception/IDocIllegalTypeException.java, **com/mulesoft/connector/sap/internal/error/exception/IDocParseException.java, **com/mulesoft/connector/sap/internal/error/exception/InvalidInputException.java, **com/mulesoft/connector/sap/internal/error/exception/SapIDocConversionException.java, **com/mulesoft/connector/sap/internal/error/exception/SapIdocFieldNotFoundException.java, **com/mulesoft/connector/sap/internal/error/exception/SapIDocMetadataUnavailableException.java, **com/mulesoft/connector/sap/internal/model/document/IDocId.java,**com/mulesoft/connector/sap/internal/error/exception/SapInternalException.java, **com/mulesoft/connector/sap/internal/error/exception/ExecutionException.java, **com/mulesoft/connector/sap/internal/error/exception/UnableToReachDestinationException.java,**com/mulesoft/connector/sap/internal/error/exception/MissingBussinessObjectException.java,**com/mulesoft/connector/sap/internal/connection/SapJCoTraceListener.java,**com/mulesoft/connector/sap/internal/service/impl/IDocumentJCoService.java,**com/mulesoft/connector/sap/internal/mapping/BAPIFunctionXmlTransformer.java,**com/mulesoft/connector/sap/internal/source/server/disposer/JCoLeakingThreadsDisposer.java,**com/mulesoft/connector/sap/internal/service/impl/BAPIFunctionJCoService.java,**com/mulesoft/connector/sap/api/TracingConfigParameterGroup.java,**com/mulesoft/connector/sap/api/HostParameterGroup.java</sonar.coverage.exclusions>
        <jacoco.maven.plugin.version>0.8.2</jacoco.maven.plugin.version>
        <docker.maven.plugin.version>0.35.0</docker.maven.plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.sap.conn.jco</groupId>
            <artifactId>com.sap.conn.jco.sapjco3</artifactId>
            <version>3.1.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sap.conn.idoc</groupId>
            <artifactId>com.sap.conn.idoc.sapidoc3</artifactId>
            <version>3.1.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.6</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-objectstore-connector</artifactId>
            <version>1.0.0</version>
            <classifier>mule-plugin</classifier>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-file-connector</artifactId>
            <version>1.3.2</version>
            <classifier>mule-plugin</classifier>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-module-junit4</artifactId>
            <version>2.0.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-api-mockito2</artifactId>
            <version>2.0.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.5.23</version>
            <classifier>mule-plugin</classifier>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.1.2</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${dir.javaLibs}</outputDirectory>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <enableAssertions>false</enableAssertions>
                    <failIfNoTests>false</failIfNoTests>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.2</version>
            </plugin>
            <!-- munit plugins -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${mavenResourcesVersion}</version>
                <executions>
                    <execution>
                        <id>copy-munit-resources</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/test-mule/munit</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/test/munit</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.mulesoft.munit</groupId>
                <artifactId>munit-extensions-maven-plugin</artifactId>
                <version>${munit.extensions.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <phase>integration-test</phase>
                    </execution>
                </executions>
                <configuration>
                    <sharedLibraries>
                        <sharedLibrary>
                            <groupId>com.sap.conn.idoc</groupId>
                            <artifactId>com.sap.conn.idoc.sapidoc3</artifactId>
                        </sharedLibrary>
                        <sharedLibrary>
                            <groupId>com.sap.conn.jco</groupId>
                            <artifactId>com.sap.conn.jco.sapjco3</artifactId>
                        </sharedLibrary>
                        <sharedLibrary>
                            <groupId>com.sap.conn.jco</groupId>
                            <artifactId>sapjco3</artifactId>
                        </sharedLibrary>
                    </sharedLibraries>
                    <!--Change this path according to your OS -->
                    <argLines>
                        <argLine>-Djava.library.path=${basedir}/src/test/resources/lib/3.1.2/linuxx86_64</argLine>
                        <argLine>-javaagent:${settings.localRepository}/org/jacoco/org.jacoco.agent/${jacoco.maven.plugin.version}/org.jacoco.agent-${jacoco.maven.plugin.version}-runtime.jar=destfile=${session.executionRootDirectory}/target/jacoco-munit.exec</argLine>
                    </argLines>
                    <runtimeConfiguration>
                        <discoverRuntimes>
                            <product>EE</product>
                            <includeSnapshots>false</includeSnapshots>
                        </discoverRuntimes>
                    </runtimeConfiguration>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.mule.modules</groupId>
                        <artifactId>mule-scripting-module</artifactId>
                        <version>1.1.6</version>
                        <classifier>mule-plugin</classifier>
                    </dependency>
                    <!-- MUnit Dependencies -->
                    <dependency>
                        <groupId>com.mulesoft.munit</groupId>
                        <artifactId>munit-runner</artifactId>
                        <version>${munit.version}</version>
                        <classifier>mule-plugin</classifier>
                    </dependency>
                    <dependency>
                        <groupId>com.mulesoft.munit</groupId>
                        <artifactId>munit-tools</artifactId>
                        <version>${munit.version}</version>
                        <classifier>mule-plugin</classifier>
                    </dependency>
                    <dependency>
                        <groupId>com.mulesoft.munit</groupId>
                        <artifactId>mtf-tools</artifactId>
                        <version>${mtf.tools.version}</version>
                        <classifier>mule-plugin</classifier>
                    </dependency>
                    <dependency>
                        <groupId>org.mule.connectors</groupId>
                        <artifactId>mule-http-connector</artifactId>
                        <version>1.5.23</version>
                        <classifier>mule-plugin</classifier>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.12.4</version>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco.maven.plugin.version}</version>
                <configuration>
                    <destFile>${session.executionRootDirectory}/target/jacoco-java.exec</destFile>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>merge</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>merge</goal>
                        </goals>
                        <configuration>
                            <destFile>${session.executionRootDirectory}/target/jacoco.exec</destFile>
                            <fileSets>
                                <fileSet>
                                    <directory>${project.build.directory}</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                            </fileSets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <scm>
        <connection>scm:git:git://github.com/mulesoft/mule4-sap-connector.git</connection>
        <developerConnection>scm:git:git@github.com:mulesoft/mule4-sap-connector.git</developerConnection>
        <url>scm:git:git://github.com/mulesoft/mule4-sap-connector.git</url>
        <tag>HEAD</tag>
    </scm>
    
    <repositories>
        <repository>
            <id>mule-releases</id>
            <name>Nexus Public Releases</name>
            <url>https://repository-master.mulesoft.org/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>
</project>
